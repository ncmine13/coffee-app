

<div class="form-container">
  <form class="form-registerorlogin" action="/user/register" method="post">
    <h1 class="regorlog-title">Create an account.</h1>
	<div class="input">
		<input type="text" name="username" value="" placeholder="username">
	</div>
	<div class="input">
		<input type="password" name="password" value="" placeholder="password">
	</div>
	<div>
		<input id="reg-button" type="submit" name="" value="Register!">
	</div>
  </form>
</div>
<div class="error">
	<p>{{message}}</p>
</div>
