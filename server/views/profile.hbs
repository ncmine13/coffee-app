<div class="bodyProfile">
  <div class="main">
    <div class="userInfo">
    <h1 class="username">{{name}}</h1>
    <img src="" alt="">
    </div>
      <div class="drinks-container">
        <h2 class="favDrinkTitle">Your Favorite Drinks</h2>
          <div class="favDrinksScroll">
            {{#each favoriteDrinks}}
              <h3>{{this.name}}</h3>
                <ul>
                  <li>{{this.type}}</li>
                  <li>{{this.cravingSatisfied}}</li>
                  <li>{{this.calories}}</li>
                  <li>{{this.ingredients}}</li>
                  <li>{{this.image}}</li>
                </ul>
            {{/each}}
          </div>
        </div>
        <div class="buttonsP">
          <a href="/coffee/path"><button type="button" name="Recommend Drink" class="recommendDrink">Recommend Drink</button></a>
          <a href="/coffee/library"><button type="button" name="Drink Library" class="drinkLibrary">Drink Library</button></a>
        </div>
      </div>
    </div>
