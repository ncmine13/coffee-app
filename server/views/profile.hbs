<div class="body">

  <div class="main">

    <h1 class="username">{{name}}</h1>

      <div class="drinks-container">
        <h2>Your Favorite Drinks</h2>

          <div class="favDrinksScroll">
            {{#each favoriteDrinks}}
              <h3>{{this.name}}</h3>
                <ul>
                  <li>{{this.type}}</li>
                  <li>{{this.cravingSatisfied}}</li>
                  <li>{{this.calories}}</li>
                  <li>{{this.ingredients}}</li>
                  <li>{{this.image}}</li>
                </ul>
            {{/each}}

          </div>

        </div>

      </div>

    </div>
